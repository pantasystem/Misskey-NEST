<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingActivity"
        android:orientation="vertical"
        android:padding="10dp"
>

    <Switch
            android:text="簡易入力を表示"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/is_visible_simple_edit"/>
    <Switch
            android:text="クリック可能なノート"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/is_note_clickable"/>
    <Switch
            android:text="バックグラウンド更新"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/background_updatable"/>
</LinearLayout>