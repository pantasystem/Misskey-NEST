<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/status_text"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp" android:layout_marginTop="3dp" tools:visibility="visible"/>

    <ImageView
            android:id="@+id/user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_human"
            android:layout_marginStart="5dp" android:layout_marginTop="3dp"
            android:layout_below="@+id/status_text"/>

    <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/user_name"
            android:text="TextView"
            android:textColor="?android:textColorPrimary"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_text"
            android:layout_marginStart="5dp" android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/user_icon"/>
    <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/user_id"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_text"
            android:textSize="16sp"
            android:layout_marginStart="8dp" android:layout_marginTop="5dp"

            android:layout_toEndOf="@+id/user_name"/>
    <Button
            android:id="@+id/follow_un_follow_button"
            android:text="Follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/status_text"/>
    <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/user_description"

            android:text="@string/testtesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttest"
            android:textColor="?android:textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/follow_un_follow_button"
            android:layout_toEndOf="@+id/user_icon" android:textSize="14sp"/>

</RelativeLayout>